                "value": "{{username}}"
              },
              {
                "table": "user_logs",
                "column": "created",
                "type": "datetime",
                "value": "NOW()"
              }
            ],
            "table": "user_logs",
            "returning": "id",
            "query": "INSERT INTO user_logs\n(userid, activity, data, created) VALUES (:P1 /* {{identity}} */, 'Valid login', :P2 /* {{username}} */, 'NOW()')",
            "params": [
              {
                "name": ":P1",
                "type": "expression",
                "value": "{{identity}}",
                "test": ""
              },
              {
                "name": ":P2",
                "type": "expression",
                "value": "{{username}}",
                "test": ""
              }
            ]
          }
        },
        "meta": [
          {
            "name": "identity",
            "type": "text"
          },
          {
            "name": "affected",
            "type": "number"
          }
        ]
      }
    ]
  },
